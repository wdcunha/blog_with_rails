<main class="container">

    <h3><%= @liked ? 'Liked Posts' : 'All Posts' %></h3>

    <% if !@liked %>
      <div class="row">
        <div class="col-md-8">
          <img src="/assets/envelope-silhouette.jpg" alt="Post Image" class="big-img">
          <h3>Title</h3>
          <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        </div>
        <div class="col-md-4">
          <h3>Most Liked</h3>
          <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        </div>
      </div>
      <div class="row w-100">
        <% @posts.each do |post| %>
          <div class="col-md-4">
            <img src="/assets/wordpress-post.jpg" alt="Post Image">
            <h4><%= link_to post.title, post_path(post) %></h4>
            <p class="card-text"><%= post.body %></p>
          </div>
        <% end %>
      </div>

    <% else %>
      <% @posts.each do |post| %>
        <div class="col-md-12">
          <%= link_to post.title, post_path(post) %>  
        </div>
      <% end %>
    <% end %>
</main>
