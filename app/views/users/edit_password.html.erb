<main class="container w-50">

  <h3>Change Password</h3>

  <%= form_tag "/users/#{@user.id}/edit_password", method: "patch" do  %>

    <div class="form-group">
      <%= label_tag(:current_password, "current_password:"), class: 'col-sm-4 control-label' %>
      <%= password_field_tag(:current_password), class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag(:new_password, "new_password:"), class: 'col-sm-4 control-label' %>
      <%= password_field_tag(:new_password), class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag(:new_password_confirmation, "new_password_confirmation:"), class: 'col-sm-4 control-label' %>
      <%= password_field_tag(:new_password_confirmation), class: 'form-control' %>
    </div>

    <%= submit_tag("Change Password"), class: 'btn btn-primary' %>
  <% end %>
</main>
