<main class="container w-50">

  <h3>Change Password</h3>

  <%= form_tag "/users/#{@user.id}/update_password", method: "patch" do  %>

    <div class="form-group">
      <%= label_tag :current_password, "Current Password:"%>
      <%= password_field_tag :current_password %>
    </div>

    <div class="form-group">
      <%= label_tag :new_password, "New Password:" %>
      <%= password_field_tag :new_password %>
    </div>

    <div class="form-group">
      <%= label_tag :new_password_confirmation, "New Password Confirmation:"  %>
      <%= password_field_tag :new_password_confirmation %>
    </div>

    <%= submit_tag "Change Password", class: 'btn btn-primary' %>
  <% end %>
</main>
