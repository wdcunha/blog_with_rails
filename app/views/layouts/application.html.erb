<!DOCTYPE html>
<html>
  <head>
    <title>Blog Post</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-light d-inline d-sm-inline-flex">
          <a class="navbar-brand" href="/">
            <img src="/assets/post_imag.jpeg" height="30" class="d-inline-block align-top">
          </a>
          <div class="menu float-right">
            <a href="/">Home</a>
            |
            <%= link_to 'New Post', new_post_path %>
            |
            <% if user_signed_in? %>
              <span>Hello, <%= link_to current_user.first_name, user_path(current_user) %>!</span>
              <% if current_user.is_admin? %>
            |
                <%= link_to 'Dashboard', admin_dashboard_index_path %>
              <% end %>
            |
              <%= link_to( 'Sign Out', session_path,
                  method: :delete,
                  data: {confirm: 'Do you really want to sign out?'})
              %>
            <% else %>
              <%= link_to 'Sign In', new_session_path %>
            |
              <%= link_to 'Sign Up', new_user_path %>
            <% end %>
          </div>
      </nav>
      <hr ="menu-bar">
    </header>

      <div class="container">

        <% if flash[:success].present? %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= flash[:success] %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% elsif flash[:danger].present? %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= flash[:danger] %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% end %>
      </div>

      <%= yield %>
  </body>
</html>
